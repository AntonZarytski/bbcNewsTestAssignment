<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/med_margin"
    android:background="@color/wite"
    android:theme="@style/Theme.MaterialComponents.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/med_margin">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/description_text_size"
            android:textStyle="bold"
            tools:text="Description" />

        <RelativeLayout
            android:id="@+id/hided_data_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/last_update_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_margin="@dimen/small_margin"
                android:text="@string/the_last_update"
                android:textColor="@color/black"
                android:textSize="@dimen/link_text_size"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/hide_item_ib"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:scaleType="centerInside"
                app:backgroundTint="@color/wite"
                app:srcCompat="@drawable/remove_iconpng" />

        </RelativeLayout>

        <TextView
            android:id="@+id/more_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/med_margin"
            android:text="@string/more_details"
            android:textColor="@color/blue"
            android:textSize="@dimen/link_text_size"
            android:textStyle="italic" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>